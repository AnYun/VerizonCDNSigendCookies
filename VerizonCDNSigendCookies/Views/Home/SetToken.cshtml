@{
}

@if (TempData["Message"] != null)
{
<div class="alert alert-success" role="alert">
    @TempData["Message"]
</div>
}

<a asp-action="SetToken" class="btn btn btn-success btn-lg" role="button" aria-pressed="true">設定 Token</a>
<a asp-action="RemoveToken" class="btn btn-danger btn-lg" role="button" aria-pressed="true">刪除 Token</a>
<a asp-action="eBooks" asp-route-page="01" class="btn btn-primary btn-lg" role="button" aria-pressed="true">測試看電子書</a>

@if (TempData["token"] != null)
{
    var tokens = TempData["token"] as System.Collections.Specialized.NameValueCollection;

<table class="table">
    <thead>
        <tr>
            <th>參數</th>
            <th>值</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var token in tokens)
            {
        <tr>
            <td>@token</td>
            <td>@tokens[token.ToString()]</td>
        </tr>
            }
    </tbody>
</table>
}