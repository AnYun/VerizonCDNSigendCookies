@{
    ViewData["Title"] = "Home Page";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}

<a asp-action="SetToken" class="btn btn btn-success btn-lg" role="button" aria-pressed="true">設定 Token</a>
<a asp-action="RemoveToken" class="btn btn-danger btn-lg" role="button" aria-pressed="true">刪除 Token</a>
<a asp-action="eBooks" asp-route-page="01" class="btn btn-primary btn-lg" role="button" aria-pressed="true">測試看電子書</a>
